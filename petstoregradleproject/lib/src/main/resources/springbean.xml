<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans.xsd
http://www.springframework.org/schema/context
http://www.springframework.org/schema/context/spring-context.xsd">

	<context:annotation-config />

	<bean id="person" class="petstoregradleproject.Person">
		<property name="personName" value="David Guetta" />
		<property name="age" value="20" />
	</bean>
	<bean id="person1" class="petstoregradleproject.Person">
		<property name="personName" value="Harry" />
		<property name="age" value="21" />
	</bean>

	<bean id="account" class="petstoregradleproject.Account">
		<property name="email" value="david@gmail.com" />
	</bean>

	<bean id="payment" class="petstoregradleproject.Payment">
		<property name="amount" value="5000.50" />
	</bean>

</beans>